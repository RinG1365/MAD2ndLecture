<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThreadedActivity" >

    <ImageView
        android:id="@+id/imgVmProfile"
        android:layout_width="match_parent"
        android:layout_height="236dp"
        android:src="@mipmap/ic_launcher"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtVmHello"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/holo_blue_light"
        android:gravity="center"
        android:text="Text From 1st Activity"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnTakePic"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Take Picture!"
        android:onClick="fnTakePic"/>

    <Button
        android:id="@+id/btnSendBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Pic to 1st Activity" />

</LinearLayout>